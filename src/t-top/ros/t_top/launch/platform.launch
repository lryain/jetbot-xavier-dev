<launch>
    <arg name="camera_2d_wide_enabled"/>
    <arg name="use_echo_cancellation" default="false"/>
    <arg name="pulse_audio_sink" default="alsa_output.usb-SEEED_ReSpeaker_4_Mic_Array__UAC1.0_-00.analog-stereo" />
    <arg name="opentera_playback_node_enabled" default="false"/>

    <include file="$(find t_top)/launch/platform/daemon_ros_client.launch"/>

    <include file="$(find t_top)/launch/platform/actuators.launch">
        <arg name="pulse_audio_sink" value="$(arg pulse_audio_sink)"/>
        <arg name="opentera_playback_node_enabled" value="$(arg opentera_playback_node_enabled)"/>
    </include>

    <include file="$(find t_top)/launch/platform/sensors.launch">
        <arg name="camera_2d_wide_enabled" value="$(arg camera_2d_wide_enabled)"/>
        <arg name="use_echo_cancellation" value="$(arg use_echo_cancellation)"/>
        <arg name="pulse_audio_source" value="alsa_input.usb-SEEED_ReSpeaker_4_Mic_Array__UAC1.0_-00.multichannel-input" />
        <arg name="pulse_audio_sink" value="$(arg pulse_audio_sink)" />
        <arg name="echo_cancellation_dest" value="odas_echo_cancelled" />
        <arg name="ec_volume_percent" value="90" />
    </include>

</launch>
